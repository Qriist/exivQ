{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build exivQ DLL",
            "type": "shell",
            "command": "if not exist build mkdir build && \"C:\\Program Files\\Microsoft Visual Studio\\2022\\BuildTools\\VC\\Auxiliary\\Build\\vcvarsall.bat\" x64 && cl /LD src\\exivQ.c /Fe:build\\exivQ.dll",
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
